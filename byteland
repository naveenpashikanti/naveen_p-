def bl(n) :
    if n<12 :
        return n
    if n==12 :
        return n+1
    else :
        return (bl(n/2)+bl(n/3)+bl(n/4))
k=1
while k:
    n=int(raw_input())
    print bl(n)
    if n<0 :
        k=0
    
